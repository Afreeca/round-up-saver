{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "src",
    "target": "esnext",
    "jsx": "react",
    "lib": ["dom", "es5"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "types": ["node", "cypress"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src", "cypress", "cypress.config.ts"],
  "exclude": ["public", "node_modules"]
}
