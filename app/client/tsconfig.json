{
    "compilerOptions": {
        "module": "commonjs",
        "baseUrl": "src",
        "target": "esnext",
        "jsx": "react",
        "lib": ["dom", "es2015", "es2017", "esnext"],
        "strict": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "strictNullChecks": false,
        "noUnusedLocals": false,
        "allowJs": true
    },
    "exclude": ["node_modules", "public","jest"],
    "include": ["src"]
  }