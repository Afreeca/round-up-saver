{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "src",
    "target": "esnext",
    "jsx": "react",
    "lib": ["dom", "es5", "es2017"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "allowJs": true,
    "types": ["cypress", "node"],
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["public", "cypress.config.ts", "cypress", "node_modules"],
  "include": ["src", "cypress/**/*.tsx", "**/*.ts"]
}
